@model CongThongTinDHL.Models.GiangVien

@{
    ViewData["Title"] = "Thêm Mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Giảng Viên</h4>
<hr />
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-lg-12 row">
            <div class="form-group col-md-12">
                <img id="image-preview" src="#" alt="" width="200">
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Chọn Ảnh Giảng Viên</label>
                <input asp-for="ChoosePhoto" id="input-file" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="MaGv" class="control-label">Mã GV</label>
                <input asp-for="MaGv" class="form-control" />
                <span asp-validation-for="MaGv" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="MaKhoa" class="control-label">Mã Khoa</label>
                <select asp-for="MaKhoa" class ="form-control" asp-items="ViewBag.MaKhoa"></select>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="HoTen" class="control-label">Họ Tên</label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="NgaySinh" class="control-label">Ngày Sinh</label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="GioiTinh" class="control-label">Giới tính</label>
                <select asp-for="GioiTinh" class="form-control">
                    <option value="">--Chọn giới tính--</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Cmnd" class="control-label">CMND</label>
                <input asp-for="Cmnd" class="form-control" />
                <span asp-validation-for="Cmnd" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="NoiSinh" class="control-label">Nơi Sinh</label>
                <input asp-for="NoiSinh" class="form-control" />
                <span asp-validation-for="NoiSinh" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Sdt" class="control-label">Điện thoại</label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="PasswordGv" class="control-label">Mật khẩu</label>
                <input asp-for="PasswordGv" class="form-control" />
                <span asp-validation-for="PasswordGv" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="DanToc" class="control-label">Dân tộc</label>
                <input asp-for="DanToc" class="form-control" />
                <span asp-validation-for="DanToc" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="TonGiao" class="control-label">Tôn giáo</label>
                <input asp-for="TonGiao" class="form-control" />
                <span asp-validation-for="TonGiao" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="QuocTich" class="control-label">Quốc tịch</label>
                <input asp-for="QuocTich" class="form-control" />
                <span asp-validation-for="QuocTich" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
            </div>
        </div>
        </form>
    </div>
<script>
    const inputFile = document.getElementById("input-file");
    const imagePreview = document.getElementById("image-preview");

    inputFile.addEventListener("change", function () {
        const file = this.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function () {
                imagePreview.setAttribute("src", this.result);
            });

            reader.readAsDataURL(file);
        }
    });
</script>

