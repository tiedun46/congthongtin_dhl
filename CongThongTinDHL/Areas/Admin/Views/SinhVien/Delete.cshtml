@model CongThongTinDHL.Models.SinhVien

@{
    ViewData["Title"] = "Xóa Sinh Viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa Sinh Viên</h1>

<h3>Bạn có chắc muốn xóa sinh viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên SV
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSv)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailSv)
        </dd>
        <dt class = "col-sm-2">
            Điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
            Giới tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class = "col-sm-2">
           Ảnh Sinh Viên
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.AnhSv" alt="" width="100"/>
        </dd>
        <dt class = "col-sm-2">
            Quốc tịch
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuocTich)
        </dd>
        <dt class = "col-sm-2">
            Khoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhoaNavigation.TenKhoa)
        </dd class>
        <dt class = "col-sm-2">
            Lớp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaLopNavigation.TenLop)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSv" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
    </form>
</div>
