@model CongThongTinDHL.Models.Banner

@{
    ViewData["Title"] = "Sửa Banner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sửa Thông Tin</h1>

<h4>Banner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaBanner" />
            <input type="hidden" asp-for="NgayTao" />
            <div class="form-group">
                <label class="control-label">Ảnh Banner</label>
                <img src="@Model.AnhBanner" alt="" width="200"/>
            </div>
            <div class="form-group">
                <label class="control-label">Chọn Banner Mới</label>
                <input asp-for="ChoosePhoto" class="form-control" />
            </div>
            <div class="form-group mt-2 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> Hiển thị
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label">Link của banner</label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenBanner" class="control-label">Tên Banner</label>
                <input asp-for="TenBanner" class="form-control" />
                <span asp-validation-for="TenBanner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTaNgan" class="control-label">Mô tả ngắn</label>
                <input asp-for="MoTaNgan" class="form-control" />
                <span asp-validation-for="MoTaNgan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay Lại</a>
            </div>
        </form>
    </div>
</div>


