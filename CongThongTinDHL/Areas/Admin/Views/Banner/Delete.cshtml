@model CongThongTinDHL.Models.Banner

@{
    ViewData["Title"] = "Xóa Banner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa Banner</h1>

<h3>Bạn có chắc muốn xóa banner này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ảnh Banner
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.AnhBanner" width="150" />
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Model.NgayTao
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == true)
            {
                <p>Hiển thị</p>
            }
            @if (Model.Status == false)
            {
                <p>Đã tắt</p>
            }
        </dd>
        <dt class = "col-sm-2">
            Link của Banner
        </dt>
        <dd class = "col-sm-10">
            @Model.Link
        </dd>
        <dt class = "col-sm-2">
            Tên Banner
        </dt>
        <dd class = "col-sm-10">
            @Model.TenBanner
        </dd>
        <dt class = "col-sm-2">
            Mô tả ngắn
        </dt>
        <dd class = "col-sm-10">
            @Model.MoTaNgan
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaBanner" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-light m-1" asp-action="Index">Quay Lại</a>
    </form>
</div>
