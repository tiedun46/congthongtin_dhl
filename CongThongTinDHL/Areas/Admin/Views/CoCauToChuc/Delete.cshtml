@model CongThongTinDHL.Models.CoCauToChuc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CoCauToChuc</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên bài viết
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenTc)
        </dd>
        <dt class = "col-sm-2">
            Ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Anh" alt="" width="200"/>
        </dd>
        <dt class = "col-sm-2">
            Mô tả ngắn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTaNgan)
        </dd>
        <dt class = "col-sm-2">
            Ngày đăng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayDang)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == true)
            {
                <p>Hiển thị</p>
            }
            @if (Model.Status == false)
            {
                <p>Đã tắt</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaTc" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
    </form>
</div>
