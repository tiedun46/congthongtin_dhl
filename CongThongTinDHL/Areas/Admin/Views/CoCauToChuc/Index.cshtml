@model IEnumerable<CongThongTinDHL.Models.CoCauToChuc>

@{
    ViewData["Title"] = "Cơ Cấu Tổ Chức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Cơ Cấu Tổ Chức</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Thêm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ảnh
            </th>
            <th>
                Tên Bài Viết
            </th>
            <th>
                Mô Tả Ngắn
            </th>
            <th>
               Ngày Đăng
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Anh" alt="" width="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTaNgan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDang)
            </td>
            <td>
                    @if (item.Status == true)
                    {
                        <p>Hiển thị</p>
                    }
                    @if (item.Status == false)
                    {
                        <p>Đã tắt</p>
                    }
            </td>
            <td>
                <a class="btn btn-primary m-1" asp-action="Edit" asp-route-id="@item.MaTc">Sửa</a>
                <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.MaTc">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
