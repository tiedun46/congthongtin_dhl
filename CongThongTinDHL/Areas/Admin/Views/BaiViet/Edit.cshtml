@model CongThongTinDHL.Models.BaiViet

@{
    ViewData["Title"] = "Sửa Bài Viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sửa Thông Tin</h1>

<h4>Bài Viết</h4>
<hr />
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaBv" />
            <input type="hidden" asp-for="NgayDang" />
            <div class="form-group col-md-4">
                <label asp-for="MaChuDe" class="control-label">Chọn Chủ Đề</label>
                <select asp-for="MaChuDe" class="form-control" asp-items="ViewBag.MaChuDe"></select>
            </div>
            <div class="form-group col-md-6">
                <img id="image-preview" src="@Model.AnhBv" alt="" width="200">
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Chọn Ảnh Bài Viết</label>
                <input asp-for="ChoosePhoto" id="input-file" class="form-control" />
            </div>
            <div class="form-group mt-2 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> Hiển thị
                </label>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TenBv" class="control-label">Tên bài viết</label>
                <input asp-for="TenBv" class="form-control" />
                <span asp-validation-for="TenBv" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="MoTaNgan" class="control-label">Mô tả ngắn</label>
                <textarea asp-for="MoTaNgan" class="form-control"></textarea>
                <span asp-validation-for="MoTaNgan" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="MoChiTiet" class="control-label">Mô tả chi tiết</label>
                <textarea asp-for="MoChiTiet" id="summernote"></textarea>
                <span asp-validation-for="MoChiTiet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>

<script>
    $('#summernote').summernote({
        placeholder: 'Nhập thông tin...',
        tabsize: 2,
        height: 400,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
