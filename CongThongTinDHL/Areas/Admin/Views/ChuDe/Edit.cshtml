@model CongThongTinDHL.Models.ChuDe

@{
    ViewData["Title"] = "Sửa Chủ Đề";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sửa Thông Tin</h1>

<h4>Chủ Đề</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaChuDe" />
            <div class="form-group col-md-6">
                <label asp-for="TenCd" class="control-label">Tên Chủ Đề</label>
                <input asp-for="TenCd" class="form-control" />
                <span asp-validation-for="TenCd" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <textarea asp-for="GhiChu" class="form-control"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> Hiển thị
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>

