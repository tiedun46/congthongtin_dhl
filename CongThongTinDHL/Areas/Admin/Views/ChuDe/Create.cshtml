@model CongThongTinDHL.Models.ChuDe

@{
    ViewData["Title"] = "Thêm Mới Chủ Đề";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Chủ Đề</h4>
<hr />
<div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-4">
                <label asp-for="MaChuDe" class="control-label">Mã Chủ Đề</label>
                <input asp-for="MaChuDe" class="form-control" />
                <span asp-validation-for="MaChuDe" class="text-danger"></span>
            </div>
        <div class="form-group col-md-6">
                <label asp-for="TenCd" class="control-label">Tên Chủ Đề</label>
                <input asp-for="TenCd" class="form-control" />
                <span asp-validation-for="TenCd" class="text-danger"></span>
            </div>
        <div class="form-group col-md-12">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <textarea asp-for="GhiChu" class="form-control" ></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
        <div class="form-group mt-2 form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" /> Hiển thị
            </label>
        </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>


