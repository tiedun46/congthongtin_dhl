@model CongThongTinDHL.Models.ChuDe

@{
    ViewData["Title"] = "Xóa Chủ Đề";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa Chủ Đề</h1>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Chủ Đề
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenCd)
        </dd>
        <dt class="col-sm-2">
            Ghi Chú
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GhiChu)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == true)
            {
                <p>Hiển thị</p>
            }
            @if (Model.Status == false)
            {
                <p>Đã tắt</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaChuDe" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
    </form>
</div>
