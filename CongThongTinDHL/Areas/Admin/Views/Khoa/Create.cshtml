@model CongThongTinDHL.Models.Khoa

@{
    ViewData["Title"] = "Thêm Mới Khoa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Khoa</h4>
<hr />
<div class="row">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="MaKhoa" class="control-label">Mã Khoa</label>
                <input asp-for="MaKhoa" class="form-control" />
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <img id="image-preview" src="#" alt="" width="200">
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Chọn Ảnh Khoa</label>
                <input asp-for="ChoosePhoto" id="input-file" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TenKhoa" class="control-label">Tên Khoa</label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="EmailKhoa" class="control-label">Email</label>
                <input asp-for="EmailKhoa" class="form-control" />
                <span asp-validation-for="EmailKhoa" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Sdtkhoa" class="control-label">Điện thoại</label>
                <input asp-for="Sdtkhoa" class="form-control" />
                <span asp-validation-for="Sdtkhoa" class="text-danger"></span>
            </div>
        <div class="form-group col-md-6">
                <label asp-for="SoGv" class="control-label">Số Giảng Viên</label>
                <input asp-for="SoGv" class="form-control" />
                <span asp-validation-for="SoGv" class="text-danger"></span>
            </div>
        <div class="form-group col-md-6">
                <label asp-for="SoSv" class="control-label">Số Sinh Viên</label>
                <input asp-for="SoSv" class="form-control" />
                <span asp-validation-for="SoSv" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="MucTieu" class="control-label">Mục Tiêu</label>
                <textarea asp-for="MucTieu" id="summernote" class="form-control"></textarea>
                <span asp-validation-for="MucTieu" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> Hiển thị
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-light m-1" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>


<script>
    $('#summernote').summernote({
        placeholder: 'Nhập thông tin...',
        tabsize: 2,
        height: 400,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
<script>
    const inputFile = document.getElementById("input-file");
    const imagePreview = document.getElementById("image-preview");

    inputFile.addEventListener("change", function () {
        const file = this.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function () {
                imagePreview.setAttribute("src", this.result);
            });

            reader.readAsDataURL(file);
        }
    });
</script>