@model IEnumerable<CongThongTinDHL.Models.ThongBaoKhoa>

@{
    ViewData["Title"] = "Thông báo khoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- blog section start -->
<div class="blog_section layout_padding">
    <div class="container">
        <h1 class="news_taital">Danh Sách Thông Báo Khoa</h1>
        <p class="news_text">Cập nhật liên tục các thông tin trong ngày.</p>
        <div class="list_blog_1 row">
            @foreach (var item in Model)
            {
                <div class="blog_section_2 col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="@item.AnhTb" class="image_7" style="width:80%">
                        </div>
                        <div class="col-md-12">
                            <a asp-action="Details" asp-route-id="@item.MaTbkhoa">
                                <b>@item.TenTb</b>
                                <b>@item.MaKhoaNavigation.TenKhoa</b>
                                <p class="ipsum_text">@item.MoTaNgan</p>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- blog section end -->