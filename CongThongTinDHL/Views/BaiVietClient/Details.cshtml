@model CongThongTinDHL.Models.BaiViet

@{
    ViewData["Title"] = @Model.TenBv;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- about section start -->
<div class="news_section layout_padding">
    <div class="container">
        <div class="news_section_2 bg-light">
            <div class="row">
                <div class="col-md-12">
                        <h4 class="make_text text-upcase">@Model.TenBv</h4>
                    <img src="@Model.AnhBv" class="image_6" style="width:80%">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="news_taital_box mb-2">
                        <p class="date_text">@Model.NgayDang</p>
                        <p class="lorem_text">@Model.MoTaNgan</p>
                        <div>@Html.Raw(Model.MoChiTiet)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- about section end -->